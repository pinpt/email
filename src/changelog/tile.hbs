<table width="100%" cellpadding="0" cellspacing="0">
  <tbody>
    <tr>
      <td style="padding: 20px 22px">
        <table width="100%" cellpadding="0" cellspacing="0">
          <tbody>
            <tr>
              <td class="wi-100p" align="left" style="padding: 0 0 12px">
                <a style="text-decoration: none;" href="{{url}}" title="{{title}} Cover Image">
                  <img
                    src="{{coverMedia.placeholderImage}}"
                    width="230"
                    style="max-width: 350px;font-size: 10px; line-height: 14px; font-family: Helvetica, Arial, sans-serif; background-color: #6c95ec; color: #ffffff; vertical-align: top; text-align: center;"
                    alt=""
                  /></a>
              </td>
            </tr>
            <tr>
              <td class="h-a" height="98" valign="top">
                <table width="100%" cellpadding="0" cellspacing="0">
                  <tbody>
                    <tr>
                      <td
                        style="padding: 0 0 12px; color: #000000;font-size: 16px; line-height: 20px; font-weight: bold; font-family: Arial, Helvetica, sans-serif;"
                      >
                        {{title}}
                      </td>
                    </tr>
                    <tr>
                      <td
                        style="color: #000000;font-size: 16px;line-height: 22px;font-weight: normal; font-family: Arial,Helvetica,sans-serif;"
                      >
                        {{headline}}
                      </td>
                    </tr>
                  </tbody>
                </table>
              </td>
            </tr>
            <tr>
              <td
                class="h-u"
                valign="bottom"
                style="padding: 10px 0 0; color: #5551ff;font-size: 16px;line-height: 20px;font-weight: bold;font-family: Arial, Helvetica, sans-serif;"
              >
                <a
                  style="color: #5551ff;text-decoration: none;font-weight: bold;"
                  href="{{url}}"
                  title="{{title}} Read More"
                >
                  Read more</a>
              </td>
            </tr>
          </tbody>
        </table>
      </td>
    </tr>
  </tbody>
</table>