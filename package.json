{
	"name": "@pinpt/email",
	"version": "0.0.6",
	"description": "Email templates for Pinpoint",
	"main": "index.js",
	"types": "index.d.ts",
	"repository": {
		"type": "git",
		"url": "https://github.com/pinpt/email.git"
	},
	"scripts": {
		"test": "jest",
		"test:ci": "jest --ci --reporters='default'",
		"test:write": "npm run test -- --updateSnapshot",
		"format": "prettier --write ."
	},
	"dependencies": {
		"handlebars": "^4.7.7"
	},
	"devDependencies": {
		"@babel/preset-env": "^7.15.0",
		"babel": "^6.23.0",
		"jest": "^27.0.6"
	},
	"jest": {
		"testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|mjs?|js?|tsx?|ts?)$",
		"testPathIgnorePatterns": [
			"<rootDir>/build/",
			"<rootDir>/node_modules/"
		],
		"moduleFileExtensions": [
			"js",
			"jsx"
		]
	}
}
